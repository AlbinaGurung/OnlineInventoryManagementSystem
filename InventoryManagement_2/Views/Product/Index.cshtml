@model InventoryManagement_2.ViewModels.ProductSearchVm
@{
    ViewData["Title"] = "list of products";
}

<form method="get" class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-md-3">
            <input type="Text" id="searchid" name="search" class="form-control" />
            </div>
            <div class="col-12 col-md-3">
                <button type="submit" class="btn btn-primary">Search</button>
            
            <a asp-controller="Product" asp-action="add" class="btn btn-success">New Item</a>
            </div>
        </div>
    </div>
  
</form>

<div class="card mt-4">
    <div class="card-body">
        <div class="row">

            <table class="table table-striped table-bordered table-hover">
                <thead class="">
                    <tr>
                        <th>SN</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Unit</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>@{
                        int SN = 1;
                        foreach (var item in Model.data)
                        {
                            <tr>
                                <td>@(SN++)</td>
                                <td>@item.Name</td>
                                <td>@item.Category.Name</td>
                                <td>@item.Unit.Name</td>
                                <td>@item.Price</td>
                                <td>
                                    <a asp-controller="Product" asp-route-id="@item.Id" asp-action="Edit"
                                        class="btn btn-primary">Edit</a>
                                    <a asp-controller="Product" asp-route-id="@item.Id" asp-action="Delete"
                                        class="btn btn-danger"
                                        onclick="return confirm('Do you really want to delete?')">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>


</div>
