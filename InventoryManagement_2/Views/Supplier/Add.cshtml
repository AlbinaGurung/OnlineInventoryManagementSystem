@model InventoryManagement_2.ViewModels.SupplierAddVm;


<div class="card bg-light mb-4" style="max-width: 25rem;">
  <div class="card-header ">Add New Supplier</div>
  <div class="card-body">
    <form method="post">

      <div class="mb-3 ">
        <label asp-for="Id"></label>
        <input type="text" asp-for="Id" class="form-control">
        <span asp-validation-for="Id" class="text-danger"></span>
      </div>

      <div class="mb-3 ">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>

      <div class="mb-3">
        <label asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control">
        <span asp-validation-for="Address" class="text-danger"></span>
      </div>
      <div class="card-footer">
        <button class="btn btn-success" type="submit">Save</button>
        <a asp-controller="Supplier" asp-action="Index" class="btn btn-primary">Back</a>
      </div>
    </form>
  </div>
