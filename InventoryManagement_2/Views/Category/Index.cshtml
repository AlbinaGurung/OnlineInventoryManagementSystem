@model InventoryManagement_2.ViewModels.CategorySearchVm

    <div class="row">
        
            <form>
                <input type="text" asp-for="Name" placeholder="search">
            </form>
            <a  asp-controller="Category" asp-action="Add" class="btn btn-success">New Category</a>
            <<br>
            <table class="table table-stripped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                @foreach(var cat in Model.Categories)
                {
                <tr>
                <td>@cat.Id</td>
                <td>@cat.Name</td>
                </tr>
                }
                </tbody>
            </table>
       
    </div>

